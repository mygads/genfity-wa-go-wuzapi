############################################################
# Active Environment Configuration
# Domain: api-wa.genfity.com
############################################################

# Token for WuzAPI Admin (change in production!)
WUZAPI_ADMIN_TOKEN=

# WuzAPI Session Configuration
SESSION_DEVICE_NAME=

# Database configuration (use service name 'db' when using docker compose)
DB_USER=
DB_PASSWORD=
DB_NAME=
DB_HOST=db
DB_PORT=5432
DB_SSLMODE=false
TZ=

# Global webhook URL
WUZAPI_GLOBAL_WEBHOOK=https://example.com/webhook

# "json" or "form" for the default
WEBHOOK_FORMAT=json

# =============================
# Domain & SSL (prod via nginx-proxy + acme-companion)
# =============================
WUZAPI_DOMAIN=
# Replace with a valid email to receive Let's Encrypt expiration notices
LETSENCRYPT_EMAIL=you@example.com

# These are automatically picked up by nginx-proxy (set also in compose env)
VIRTUAL_HOST=
LETSENCRYPT_HOST=
